---
layout: navbar-footer.njk
---

<div class='home-main'>
  <div class='home-container' id='hero'>
    <h1>{{hed}}</h1>
    <div class='hero-img'>
      <img src='/img/chart-screencap.png'>
      <a href='/covid-data/preventative/'><span>EXPLORE DATA</span></a>
    </div>
  </div>

  <div class='home-container' id='carousel-container'>
    <div class='carousel-flex'>
      <div class='carousel-about'>
        <h2 class='homepage-label homepage-label__dkyellow'>Covid-19 tool</h2>
        <h3>{{covidHed}}</h3>
        <p>{{covidText}}</p>
      </div>
      <div class='carousel'>
        <ul>
          {% for chart in collections.covidData %}
          <li><a href="{{ chart.url }}">{{ chart.data.title }}</a></li>
          {% endfor %}
          </ul>
      </div>
    </div>

    <div class='carousel-flex'>
      <div class='carousel-about'>
        <h2 class='homepage-label homepage-label__green'>Survey file tool</h2>
        <h3>{{pufHed}}</h3>
        <p>{{pufText}}</p>
      </div>
      <div class='carousel'>
        <ul>
          {% for chart in collections.pufData %}
          <li><a href="{{ chart.url }}">{{ chart.data.title }}</a></li>
          {% endfor %}
          </ul>
      </div>
    </div>
  </div>

  <div class='home-container' id='explore'>
    <h2 class='homepage-label homepage-label__blue'>MCBS data tools</h2>
  </div>
</div>
