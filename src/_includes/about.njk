{% extends "base.njk" %}

{% block content %}
<div class='chart-nav'>
  <a href='/covid-data/preventive' class='chart-nav__container chart-nav__container--covid'>
    <h4>COVID-19 DATA TOOL<svg class='arrow'><use href='#rightarrow'/></svg>
    </h4>
  </a>
  <a href='/puf-data/insurance/' class='chart-nav__container chart-nav__container--puf'>
    <h4>SURVEY FILE PUF DATA TOOL<svg class='arrow'><use href='#rightarrow'/></svg>
    </h4>
  </a>
</div>


<main class='about-main'>
  <div class='about'>
    <nav class='about__nav'>
      <button class='about__nav__btn' id='about-btn' onclick='aboutDropdown()'>Contents</button>
      <div class='about__nav__list'>
        {% for item in aboutNav %}
        <a class='about__nav__list__link about__nav__list__link--{{item.class}}' href='{{item.link}}'>{{item.text}}</a>
        {% endfor %}
      </div>
    </nav>
    <article class='about__text'>
      <h1>{{title}}</h1>
      {{content | safe }}
    </article>
  </div>
</main>
{% endblock %}

{% block scripts %}
{{ super() }}
<script src='/js/aboutScroll.js'></script>
{% endblock %}
